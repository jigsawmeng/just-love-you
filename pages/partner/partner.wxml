    <view class="listview-container">
      <image src="/image/airplane1.png" class="airplane" mode="cover"></image>
      <block wx:for="{{memoryList}}" wx:key="index">
        <view class="playlog-item">
          <view class="dotline">
            <!-- 竖线 -->
            <view class="line"></view>
            <!-- 圆点 -->
            <image src="https://just-love-you.oss-cn-shanghai.aliyuncs.com/address/{{item.address}}.png" class="{{ item.iconClass }}" mode="cover"></image>
            <!-- 时间戳 -->
          </view>
          <view class="content">
            <text class="course">{{item.time}}</text>
            <image src="https://just-love-you.oss-cn-shanghai.aliyuncs.com/memory/{{item.picture}}.jpg" lazy-load="true" class="memory-pic" mode="widthFix"></image>
            <rich-text class="description" nodes="{{item.description}}"></rich-text>
          </view>
        </view>
      </block>
    </view>
  </view>
</view>